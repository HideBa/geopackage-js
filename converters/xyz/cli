#!/usr/bin/env node

const ShapeFileToGeoPackage = require('./built/index');
const path = require('path');

console.log('XYZ zip to GeoPackage Converter');

const xyzZip = path.resolve(process.cwd(), process.argv[2]);
const geoPackageFile = path.resolve(process.cwd(), process.argv[3]);

console.log('Converting %s to %s', xyzZip, geoPackageFile);
ShapeFileToGeoPackage.convert(
  {
    xyzZip: xyzZip,
    geopackage: geoPackageFile,
  },
  function(status, callback) {
    callback();
  },
  function(err, result) {
    if (err) {
      console.log('File conversion failed with error: ', err);
    } else {
      console.log('File conversion complete');
      console.log('Converted %s to %s', xyzZip, geoPackageFile);
    }
  },
);
